<center><h1>Listing crafts</h1></center>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Auther</th>
      <th>Image</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @crafts.each do |craft| %>
      <tr>
        <td><%= craft.name %></td>
        <td><%= craft.description %></td>
        <td><%= craft.auther %></td>
        <td><%= craft.image %></td>
        <td><%= link_to 'Show', craft %></td>
        <td><%= link_to 'Edit', edit_craft_path(craft) %></td>
        <td><%= link_to 'Destroy', craft, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

